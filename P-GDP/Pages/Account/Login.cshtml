@page
@model LoginModel
@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center my-4">Iniciar Sesión</h2>
            <form method="post" asp-action="OnPost">
                <div class="form-group">
                    <label for="Email">Correo Electrónico</label>
                    <input type="email" class="form-control" id="Email" asp-for="Input.Email" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <input type="password" class="form-control" id="Password" asp-for="Input.Password" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
            </form>
        </div>
    </div>
</div>
