@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center my-4">Registro de Usuario</h2>
            <form method="post" asp-action="OnPost">
                <div class="form-group">
                    <label for="Email">Correo Electrónico</label>
                    <input type="email" class="form-control" id="Email" asp-for="Input.Email" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <input type="password" class="form-control" id="Password" asp-for="Input.Password" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Confirmar Contraseña</label>
                    <input type="password" class="form-control" id="ConfirmPassword" asp-for="Input.ConfirmPassword" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>CAPTCHA</label>
                    <div class="captcha">
                        <!-- Integrar un servicio CAPTCHA, como Google reCAPTCHA -->
                        <div class="g-recaptcha" data-sitekey="your-site-key"></div>
                    </div>
                    <span asp-validation-for="CaptchaResponse" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
            </form>
        </div>
    </div>
</div>
